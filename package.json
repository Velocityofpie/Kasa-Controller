{
  "name": "kasa-controller",
  "version": "1.0.3",
  "description": "Desktop app to control Kasa smart plug speakers with auto startup/shutdown",
  "main": "dist/main/main/main.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:renderer\" \"npm run dev:main\"",
    "dev:main": "tsc -p tsconfig.main.json && tsc -p tsconfig.preload.json && electron .",
    "dev:renderer": "vite",
    "start": "npm run build && electron .",
    "start:docker": "npm run build && electron . --no-sandbox --disable-gpu",
    "build": "npm run build:main && npm run build:preload && npm run build:renderer && node fix-electron-import.js",
    "build:main": "tsc -p tsconfig.main.json && node fix-electron-import.js",
    "build:preload": "tsc -p tsconfig.preload.json",
    "build:renderer": "vite build",
    "package": "npm run build && electron-builder",
    "package:win": "npm run build && electron-builder --win",
    "package:portable": "npm run build && electron-builder --win portable"
  },
  "keywords": [
    "kasa",
    "tplink",
    "smart-plug",
    "electron",
    "automation"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "@vitejs/plugin-react": "^4.2.1",
    "concurrently": "^8.2.2",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "typescript": "^5.3.3",
    "vite": "^5.0.8"
  },
  "dependencies": {
    "electron-store": "^8.1.0",
    "electron-updater": "^6.6.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tplink-smarthome-api": "^5.0.0"
  },
  "build": {
    "appId": "com.kasa.speaker.controller",
    "productName": "Kasa Speaker Controller",
    "directories": {
      "output": "installer"
    },
    "files": [
      "dist/**/*",
      "assets/**/*",
      "package.json"
    ],
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "assets/icon.png",
      "sign": null,
      "verifyUpdateCodeSignature": false
    },
    "nsis": {
      "oneClick": true,
      "perMachine": false,
      "allowToChangeInstallationDirectory": false,
      "deleteAppDataOnUninstall": false,
      "allowElevation": true,
      "removeDefaultUninstallWelcomePage": true,
      "include": "installer-script.nsh",
      "createDesktopShortcut": false,
      "createStartMenuShortcut": true
    },
    "portable": {
      "artifactName": "${productName}-${version}-portable.${ext}"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "YOUR_GITHUB_USERNAME",
        "repo": "KASA-Speaker-Auto",
        "releaseType": "release"
      }
    ],
    "linux": {
      "target": [
        "AppImage"
      ],
      "category": "Utility"
    },
    "mac": {
      "target": [
        "dmg"
      ],
      "category": "public.app-category.utilities"
    }
  }
}
